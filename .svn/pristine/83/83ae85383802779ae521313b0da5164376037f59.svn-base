package commands;

import filesystem.File;

/**
 *  The EchoAppend class appends to the contents of a File.
 */
public class EchoAppend {

  /**
   * This appends content to stringContent of outfile.
   *
   * @param content The input that is appended to stringContent.
   * @param outfile The File whose stringContent is appended.
   */
  public void append(String content, File outfile) {
    if (outfile != null) {
      outfile.addToTextContent(content);
    }
  }
}
